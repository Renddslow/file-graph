{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "dist",
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@errors": ["src/errors"]
    }
  },
  "paths": {
    "*": ["node_modules/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
